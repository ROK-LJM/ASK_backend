<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--멤버 sql문-->
<mapper namespace="com.ask.ask_project.mapper.BoardMapper">

    <!-- 로그인 체크 -->
    <select id="loginCheck" parameterType="MemberDTO" resultType="int">
        SELECT COUNT(*) FROM ask.member_info WHERE id = #{id} AND pw = #{pw};
    </select>

    <!--회원가입-->
    <insert id="insert_memberInfo" parameterType="MemberDTO" >
        insert into ask.member_info(id, pw, name, email)
        values (#{id}, #{pw}, #{name}, #{email})
    </insert>

    <!--사용자관리 (create) -->
    <insert id="createUser" parameterType="UserDTO">
        insert into ask.user_info(uId, uPw, uName, uGrant)
        values (#{uId}, #{uPw}, #{uName}, #{uGrant})
    </insert>
    <!--사용자관리 (read) -->
    <select id="readUser" parameterType="com.ask.ask_project.DTO.UserDTO" resultType="com.ask.ask_project.DTO.UserDTO">
        select * from ask.user_info
    </select>

</mapper>